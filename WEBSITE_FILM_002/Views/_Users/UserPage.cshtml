
@{
    ViewBag.Title = "UserPage";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="d-flex justify-content-center">

    <div class="col-12 col-md-12 col-lg-8">
        <div class="infor-user">
            <div class="user-avatar">
                <h4 class=" h4-title text-center p-3 ">Thông tin cá nhân</h4>

                <div class="d-flex justify-content-center">
                    <div>
                        <img src="https://cdn.diemnhangroup.com/seoulcenter/2022/11/gai-xinh-1.jpg" alt="Alternate Text" style="width: 10rem; height: 10rem; border-radius: 50%; object-fit: cover;" />
                    </div>
                </div>
                <div class="d-flex justify-content-center">
                    <input type="submit" class="buttonCreate savebutton" name="save" value="Thay đổi" />
                </div>
            </div>

            <div class="user-infor">
                <form action="/" method="post" class="pt-5" style="width: 100%">
                    <div class="row mb-3">
                        <div class="col-12 col-md-6 row">
                            <div class="col-12 col-md-3">
                                <label for="firstname" class="form-label">Họ</label>
                            </div>
                            <div class="col-12 col-md-8">
                                <input type="text" class="form-control" name="firstname" id="firstname" value="Nguyen" />
                            </div>
                        </div>

                        <div class="col-12 col-md-6 row">
                            <div class="col-12 col-md-3">
                                <label for="lastname" class="form-label">Tên</label>
                            </div>
                            <div class="col-12 col-md-8">
                                <input type="text" class="form-control" name="lastname" id="lastname" value="Khanh" />
                            </div>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-12 col-md-6 row">
                            <div class="col-12 col-md-3">
                                <label for="born" class="form-label">Ngày sinh</label>
                            </div>
                            <div class="col-12 col-md-8">
                                <input type="date" class="form-control" name="born" id="born" value="" />
                            </div>
                        </div>

                        <div class="col-12 col-md-6 row">
                            <div class="col-12 col-md-3">
                                <label for="gender" class="form-label">Giới tính</label>
                            </div>
                            <div class="col-12 col-md-8">
                                <div>
                                    <input type="radio" class="form-check-inline" name="gender" id="gender1" value="0" />
                                    <label for="gender1">Nam</label>
                                </div>
                                <div>
                                    <input type="radio" class="form-check-inline" name="gender" id="gender2" value="1" />
                                    <label class="form-label" for="gender2">Nữ</label>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="text-center">
                        <input type="submit" class="buttonCreate savebutton" name="save" value="Lưu lại" />
                    </div>
                </form>
            </div>
        </div>

        @*<div style="background-color: #E3FDFD; height: 10px;"></div>*@

        <div class="user-account">
            <h4 class="h4-title  text-center p-3 ">Thông tin tài khoản</h4>
            <form action="/" method="post" class="pt-3" style="width: 100%;">
                <div class="row mb-3">
                    <div class="col-12 col-sm-2">
                        <label class="form-label" for="username">Tài khoản</label>
                    </div>
                    <div class="col-12 col-sm-8">
                        <input type="text" class="form-control" id="username" name="username" value="" />
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-12 col-sm-2">
                        <label class="form-label" for="password">Mật khẩu</label>
                    </div>
                    <div class="col-12 col-sm-8">
                        <input type="password" class="form-control" id="password" name="password" value="" />
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-12 col-sm-2">
                        <label for="email" class="form-label">Email</label>
                    </div>
                    <div class="col-12 col-sm-8">
                        <input type="email" class="form-control" id="email" name="password" value="" />
                    </div>
                </div>
                <div class="text-center">
                    <input type="submit" class="buttonCreate savebutton" name="save" value="Lưu lại" />
                </div>
            </form>
        </div>

        @*<div style="background-color: #E3FDFD; height: 10px;"></div>*@

        <div class="my-favourite">
            <h5 class="h4-title  text-center p-3 " style="display:fix"> Danh sách phim yêu thích</h5>

            <div style="max-height: 50rem; overflow:hidden; overflow-y: scroll;">
                <div style="height: auto; background-color: antiquewhite; padding: 1rem; padding-bottom: 0rem; overflow: hidden; border-radius: 7px; box-shadow: rgba(0, 0, 0, 0.24) 0px 3px 8px;">
                    <div>
                        <img src="https://localhost:44327/Images/FilmPoster/ve-binh-giai-ngan-ha-ki-nghi-dat-biet.png" alt="Alternate Text" style="height: 9rem; float: left; margin-right: 1rem;" />
                        <p class="limit-text-1-line" style="font-weight:600;">Tên phim</p>
                        <p>Lượt xem <span>0</span> -  Thời lượng <span>70</span> phút - Đánh giá <span>10</span> <i class="fas fa-star"></i></p>
                        <p>Thời gian lưu</p>
                    </div>
                    <div>
                        <p>
                            <a href="#"><i class="fas fa-eye"></i> Xem lại</a>
                            <a href="#"><i class="fas fa-trash"></i> Xóa</a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
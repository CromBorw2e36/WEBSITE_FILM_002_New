        {
            if (Session["isLogin"] == null)
            {
                Session["isLogin"] = false;
                return false;
            }
            else
            {
                if ((bool)Session["isLogin"])
                {
                    return true;
                }
                else
                {
                    return false;
                }
            }
        }

        if (Session["isLogin"] == null)
